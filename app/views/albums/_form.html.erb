<%=nested_form_for @album, :html => { :multipart => true }  do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title, "What place do you recommend?" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Porque es tan espectacular?" %><br />
    <%= f.text_area :description %>
  </p>

   <%= f.fields_for :photos%>
   <p><%= f.link_to_add "Add a Photo", :photos %></p>

 <p><%= f.submit %></p>
<% end %>
